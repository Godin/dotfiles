# Set environment variable $EMAIL to specify user
[ui]
editor = emacsclient --tty --alternate-editor=""
ignore=~/.hgignore

[extensions]
color =
pager =
shelve =
mq =

[pager]
pager = LESS=FRSXQ less

[alias]
lg = log --pager=yes --template "{label('red', node|short)} {label('green', date|shortdate)} {desc|firstline|strip}\n"
